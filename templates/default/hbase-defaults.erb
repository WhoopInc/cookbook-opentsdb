# Generated by Chef for <%= node['fqdn'] %>.
# Local modifications will be overwritten.

# This script is sourced by both `/bin/bash` (init script) and `/bin/sh`
# (`hbase` command), which have incompatible `ulimit` commands. We only care
# about upping the resource limits during the init script, so supress error
# messages in other environments.
if [ "$(id -ur)" = "0" ] && [ "$BASH" ]
then
  ulimit -n <%= node['hbase']['nofile'] %>
  ulimit -u <%= node['hbase']['nproc'] %>
fi

export HBASE_PID_DIR="/var/run/hbase"
export HBASE_LOG_DIR="/var/log/hbase"
export HBASE_IDENT_STRING=hbase
export HBASE_THRIFT_MODE="-nonblocking"
